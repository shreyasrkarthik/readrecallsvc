# ReadRecall FastAPI Service - Local Development Configuration
# Copy this to .env and customize for your environment

# Database Configuration - Use your Neon PostgreSQL connection string
# Get this from your Neon dashboard: https://console.neon.tech/
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require

# FastAPI Configuration
SECRET_KEY=local-dev-secret-key-change-in-production-make-it-long-and-random-123456789
JWT_SECRET_KEY=local-dev-jwt-secret-key-change-in-production-also-long-and-random-987654321
ENVIRONMENT=development

# OpenSearch Configuration
# You can use a local OpenSearch instance or a cloud provider like AWS OpenSearch
OPENSEARCH_HOST=https://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_BOOKS=books
OPENSEARCH_INDEX_SUMMARIES=summaries
OPENSEARCH_INDEX_CHARACTERS=characters

# AI Service Configuration
# Get your free Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-from-aistudio.google.com

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=48

# Summary Generation Configuration
SUMMARY_PERCENTAGE_STEP=5
